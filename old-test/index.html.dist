<!DOCTYPE html>
<html>
  <head>
    <title>Gladius Test Suite</title>
	<link rel="stylesheet" href="../tools/qunit/qunit/qunit.css" type="text/css" media="screen">
    <script src="../tools/qunit/qunit/qunit.js"></script>   
    <script src="../tools/sinon.js"></script>
    <script src="../tools/sinon-qunit.js"></script>
    <script>
      // The sinon-qunit default config of using fake timers causes one the 
      // resource get() tests to hang for some yet-to-be-determined reason,
      // (perhaps related to the scheduler?).  Since we're not currently
      // using fake timers, we'll just disable them for now.
      /*global sinon:false*/
      sinon.config.useFakeTimers=false;
    </script>
    <!-- To test the dist file, uncomment the line below and comment out
         the src/gladius.js script. -->
    <script src="../gladius.js"></script>   
	<!-- script src="../src/gladius.js"></script -->

    <script src="core/engine.js"></script>
    <script src="core/lang.js"></script>
    <script src="core/timer.js"></script>
    <script src="core/delegate.js"></script>
    <script src="core/entity.js"></script>
    <script src="core/component.js"></script>
    <script src="core/event.js"></script>
    <script src="base/resource.js"></script>
    <script src="core/resource/get.js"></script>
<!--    commented out since it's not yet implemented -->
<!--    <script src="core/cache/cache.js"></script> -->
    <script src="core/space.js"></script>
    <script src="core/scheduler.js"></script>
    <script src="core/component/transform.js"></script>
    <script src="core/resource/script.js"></script>
    <!--script src="core/threading/pool.js"></script-->

    <script src="graphics/mesh-model.js"></script>
    <script src="graphics/service.js"></script>
    <script src="physics/2d/box2d.js"></script>

    <style>
      #test-canvas {
        width: 300px;
        height: 300px;
        display: none;
        position: static;
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <h1 id="qunit-header">Gladius Test Suite</h1>
    <h2 id="qunit-banner"></h2>
    <div id="qunit-testrunner-toolbar"></div>
    <h2 id="qunit-userAgent"></h2>
    <ol id="qunit-tests"></ol>
    <canvas id="test-canvas"></canvas>
  </body>
</html>
